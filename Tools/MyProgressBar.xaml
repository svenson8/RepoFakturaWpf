<Window x:Class="FakturaWpf.Tools.MyProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakturaWpf.Tools"
        mc:Ignorable="d"
        Title="Wczytywanie ..." Height="122.034" Width="360.487" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lab_title" Grid.Row="0" Content="Tekst postępu" HorizontalAlignment="Center"/>
        <ProgressBar x:Name="my_progcontrol" Grid.Row="1" Height="50" Minimum="0" Maximum="100" Value="{Binding WorkerState}" ></ProgressBar>
    </Grid>
</Window>
