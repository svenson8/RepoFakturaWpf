<UserControl x:Name="UC_Combobox" x:Class="FakturaWpf.MyControls.MyCombobox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FakturaWpf.MyControls"
             mc:Ignorable="d">
    <StackPanel>
        <Border  BorderBrush="DarkGray" BorderThickness="1" >
            <ComboBox Width="{Binding ElementName=UC_Combobox, Path=myComboWidth}" Style="{StaticResource MyComboboxStyle}" x:Name="comboBox" SelectionChanged="ComboBox_SelectionChanged" />
        </Border>
    </StackPanel>
</UserControl>
