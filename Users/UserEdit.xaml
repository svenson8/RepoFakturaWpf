<UserControl x:Name="WIN_UserEdit" x:Class="FakturaWpf.Users.UserEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FakturaWpf.Users"
             mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <DockPanel >
        <TabControl DockPanel.Dock="Top" x:Name="tabControl" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TabItem Header="Dane szczegółowe użytkownika">

                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Nazwa:"  Grid.Row="1" Grid.Column="0" Margin="100,0,0,0"></Label>
                    <TextBox x:Name="TX_Name" Grid.Row="1" Grid.Column="0" Height="20" Margin="172,3,219,3"/>
                    <Label Content="***"  Grid.Row="1" Grid.Column="0" Margin="325,0,0,0" Foreground="DimGray"/>
                    <CheckBox x:Name="CH_Active" Content="Aktywny" Grid.Row="1" Grid.Column="0" Margin="400,5,0,0" />

                    <Label Content="Hasło:"  Grid.Row="2" Grid.Column="0" Margin="105,0,0,0"></Label>
                    <Label Content="***"  Grid.Row="2" Grid.Column="0" Margin="325,0,0,0" Foreground="DimGray"/>
                    <TextBox x:Name="TX_Passsword" Grid.Row="2" Grid.Column="0" Height="20" Margin="172,3,219,3"/>

                    <Label Content="Powtórz hasło:"  Grid.Row="3" Grid.Column="0" Margin="60,0,0,0"></Label>
                    <Label Content="***"  Grid.Row="3" Grid.Column="0" Margin="325,0,0,0" Foreground="DimGray"/>
                    <TextBox x:Name="TX_Passsword_rep" Grid.Row="3" Grid.Column="0" Height="20" Margin="172,3,219,3"/>

                    <Label Content="Imię:"  Grid.Row="4" Grid.Column="0" Margin="110,0,0,0"></Label>
                    <TextBox x:Name="TX_Name_Us" Grid.Row="4" Grid.Column="0" Height="20" Margin="172,3,99,3"/>

                    <Label Content="Nazwisko:"  Grid.Row="5" Grid.Column="0" Margin="85,0,0,0"></Label>
                    <TextBox x:Name="TX_Surname" Grid.Row="5" Grid.Column="0" Height="20" Margin="172,3,99,3"/>

                    <Label Content="Telefon:"  Grid.Row="6" Grid.Column="0" Margin="95,0,0,0"></Label>
                    <TextBox x:Name="TX_Phone" Grid.Row="6" Grid.Column="0" Height="20" Margin="172,3,219,3"/>

                    <Label Content="(***) Wypełnienie tych pól jest wymagane"  Grid.Row="7" Grid.Column="0" Margin="20,95,0,0" Foreground="DimGray"></Label>

                    <Button x:Name="button" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" 
                             Width="130" Height="28" FontSize="13">
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Image Source="/FakturaWpf;component/Resources/zapisz16.ico" Height="20" Width="20" HorizontalAlignment="Left" Margin="0,0,15,0"/>
                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">F5 Zapisz</TextBlock>
                        </StackPanel>
                    </Button>

                    <Button x:Name="button2" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" Margin="415,10,0,0" VerticalAlignment="Top" 
                             Width="130" Height="28" FontSize="13">
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Image Source="/FakturaWpf;component/Resources/anuluj16.ico" Height="20" Width="20" HorizontalAlignment="Left" Margin="0,0,15,0"/>
                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">Esc Anuluj</TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem" Visibility="Hidden">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </DockPanel>
</UserControl>
